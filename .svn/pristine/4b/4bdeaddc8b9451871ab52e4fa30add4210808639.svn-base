<css xmlns:select="http://www.w3.org/1999/html">
    <div th:include="fragment/fargment :: bootstrapTableCss"></div>
</css>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <label>类型<input id="type" th:value="${item.type}" type="text" disabled/>
            </label>
        </div>
        <div class="col-sm-3">
            <label>创建时间<input id="createTime" th:value="${item.createTime}" type="text" disabled/>
            </label>
        </div>
        <div class="col-sm-3">
            <label>消息内容<input id="content" th:value="${item.content}" type="text" disabled/>
            </label>
        </div>
    </div>
    <div class="row text-center">
        <qx:btn class="btn btn-primary" fa="fa fa-reply" label="返回" permission="" onclick="MsgDlg.back()"></qx:btn>
    </div>
</div>
</body>

<js>
    <script th:src="@{/static/js/jquery.formHelp.js}"></script>
    <script th:src="@{/static/js/select-object.js}"></script>
    <div th:include="fragment/fargment :: bootstrapTableJs"></div>
    <script>
        $(function () {
            $("#createTime").val(formatTime($("#createTime").val()));
            $("#type").val(formatType($("#type").val()));
        })

        var MsgDlg = {
        };

        /**
         * 返回
         */
        MsgDlg.back = function () {
            var index = parent.layer.getFrameIndex(window.name);
            parent.layer.close(index); //再执行关闭
        }

        function formatTime (time) {
            return time.slice(0,4)+"年"+time.slice(4,6)+"月"+time.slice(6,8)+"日"
        }

        function formatType (type) {
            switch (type) {
                case '0':
                    return '建会审批'
                case '1':
                    return '入会管理';
                case '2':
                    return '法律资讯';
                    break;
                case '3':
                    return '会员导入';
                    break;
                case '4':
                    return '组织导入';
            }
        }
    </script>
</js>
