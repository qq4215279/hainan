<css>
    <link th:href="@{/static/css/fileUpload.css}" rel="stylesheet">
    <link th:href="@{http://xiumi.us/connect/ue/v5/xiumi-ue-v5.css}" rel="stylesheet">
</css>
<style type="text/css">
    .paper {
        position:relative;
        width:840px;
        min-height: 600px;
        background:#fff;
        border:1px solid #eee;
        float:left;
        margin-bottom:10px;
        box-shadow:0 0 5px rgba(0,0,0,0.27),0 0 20px  rgba(0,0,0,.1) inset;
    }
    .paper::after,.paper::before {
        content:'';
        position:absolute;
        bottom:6px;
        width:100px;
        height:1px;
        z-index:-1;
        box-shadow:0 2px 12px 5px rgba(0,0,0,.3);
    }
    .paper::after {
        left:4px;
        transform:rotate(-6deg);
    }
    .paper::before {
        right:4px;
        transform:rotate(6deg);
    }

    .myTable{
        width: 90%;
        margin: 20px auto;
        table-layout: fixed;
    }
    .myTable th,tr,td{
        border: 1px solid #333;
    }
    .myTable thead tr,th{
        border: 0px !important;
    }

    .myTable tbody td{
        height: 33px;
        line-height: 33px;
        padding: 5px;
        text-align: center;
        font-family: '楷体';

    }
    .exclude{

        border-top: 0px!important;
        border-top: 0px!important;
    }

    .bold{
        font-weight: bold;
        font-family: 'Microsoft YaHei';
    }
    .paper:hover .download_tag{
        display: inline-block;
    }
    .download_tag {

        display: inline-block;
        position: absolute;
        right: 0;
        top: 0;
        width: 140px;
        height: 50px;
        filter: alpha(Opacity=80);
        -moz-opacity: 0.5;
        opacity: 0.5;
        background-color: #333;
        color: #FFF;
        text-align: center;
        line-height: 50px;
        border-radius: 10px;
        display: none;
        cursor: pointer;
    }


</style>
<body>
    <div class="form-horizontal" id="lawSupportForm">
        <input type="hidden" id="id" th:value="${support.id}">
        <input type="hidden" id="supportLogId" th:value="${supportLogId}">
        <div class="row">
            <div class="col-sm-12">
                <div class="paper paper1 col-sm-8 col-sm-offset-2">
                    <style type="text/css">
                        .paper {
                            position:relative;
                            width:850px;
                            min-height: 1000px;
                            background:#fff;
