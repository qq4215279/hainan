    <select id="getMemberCountByDeptId" resultType="java.lang.Integer">
        SELECT
        ifnull(sum(member_count),0)
        FROM sys_dept dm
        LEFT JOIN t_member_count pin ON pin.dept_id = dm.id
        WHERE dm.id=${deptId}
    </select>
