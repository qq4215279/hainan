    </select>

    <select id="szgzUnderUnionsMore" resultType="java.util.Map">
        SELECT ifnull(rehome_cnt,0) as cnt,fullname
        from sys_dept dm
        left join t_member_count pin on pin.dept_id=dm.id
        where `level`=2
